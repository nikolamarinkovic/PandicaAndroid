<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    >


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >


        <TextView
            android:id = "@+id/notificationsTextViewNotifications"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text = "Obavestenja"
            android:textSize = "32sp"
            android:textStyle = "bold"
            android:background = "@color/header_1"
            android:textColor = "@color/white"
            android:gravity = "center"

            />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id = "@+id/notificationTimeHeaderTextViewNotifications"
            android:layout_width="120dp"
            app:layout_constraintTop_toBottomOf="@id/notificationsTextViewNotifications"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="40dp"
            android:gravity = "center"
            android:text = "Vreme"
            android:background = "@color/table_header"
            />

        <TextView
            android:id = "@+id/notificationDescriptionHeaderTextViewNotifications"
            android:layout_width="170dp"
            app:layout_constraintTop_toTopOf="@id/notificationTimeHeaderTextViewNotifications"
            app:layout_constraintLeft_toRightOf="@id/notificationTimeHeaderTextViewNotifications"
            android:layout_height="40dp"
            android:gravity = "center"
            android:background = "@color/table_header"
            android:text = "Opis"
            android:textSize = "13sp"
            />

        <TextView
            android:id = "@+id/deleteNotificationButtonHeaderNotifications"
            android:layout_width="70dp"
            app:layout_constraintTop_toTopOf="@id/notificationTimeHeaderTextViewNotifications"
            app:layout_constraintLeft_toRightOf="@id/notificationDescriptionHeaderTextViewNotifications"
            android:layout_height="40dp"
            android:gravity = "center"
            android:background = "@color/table_header"
            android:text = "Izbrisi"
            android:textSize = "14sp"
            />





        <androidx.recyclerview.widget.RecyclerView
            android:id = "@+id/recyclerViewNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/notificationTimeHeaderTextViewNotifications"
            app:layout_constraintLeft_toLeftOf="parent"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

