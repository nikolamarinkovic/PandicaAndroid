<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/boughtTicketNameTextViewRecyclerViewBoughtTicket"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:background="@color/bought_ticket_name"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id = "@+id/boughtTicketNumberOfPeopleTextViewRecyclerViewBoughtTicket"
        android:layout_width="40dp"
        app:layout_constraintTop_toTopOf="@id/boughtTicketNameTextViewRecyclerViewBoughtTicket"
        app:layout_constraintLeft_toRightOf="@id/boughtTicketNameTextViewRecyclerViewBoughtTicket"
        android:layout_height="40dp"
        android:gravity = "center"
        android:background = "@color/table_content"
        android:textSize = "13sp"
        />

    <TextView
        android:id="@+id/boughtTicketPriceTextViewRecyclerViewBoughtTicket"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@color/table_content"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/boughtTicketNumberOfPeopleTextViewRecyclerViewBoughtTicket"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id = "@+id/boughtTicketStatusTextViewRecyclerViewBoughtTicket"
        android:layout_width="70dp"
        app:layout_constraintTop_toTopOf="@id/boughtTicketNameTextViewRecyclerViewBoughtTicket"
        app:layout_constraintLeft_toRightOf="@id/boughtTicketPriceTextViewRecyclerViewBoughtTicket"
        android:layout_height="40dp"
        android:gravity = "center"
        android:background = "@color/table_content"
        />

    <TextView
        android:id = "@+id/boughtTicketDateRecyclerViewBoughtTicket"
        android:layout_width="70dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/boughtTicketStatusTextViewRecyclerViewBoughtTicket"
        android:color = "@color/button_color"
        app:layout_constraintTop_toTopOf="@id/boughtTicketNameTextViewRecyclerViewBoughtTicket"
        android:gravity = "center"
        android:background = "@color/table_content"
        />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background = "@color/table_content"
        app:layout_constraintLeft_toRightOf="@id/boughtTicketDateRecyclerViewBoughtTicket"
        app:layout_constraintTop_toTopOf="@id/boughtTicketNameTextViewRecyclerViewBoughtTicket"
        >

        <TextView
            android:id = "@+id/cancelBoughtTicketRecyclerViewBoughtTicket"
            android:layout_width="40dp"
            android:layout_height="30dp"



            android:background = "@color/button_color"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity = "center"
            android:text = "Otkazi"

            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>