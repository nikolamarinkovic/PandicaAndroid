<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    >


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >


        <TextView
            android:id = "@+id/profileTextViewProfile"
            android:layout_width="120dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text = "Profil"
            android:textSize = "32sp"
            android:textStyle = "bold"
            android:background = "@color/header_1"
            android:textColor = "@color/white"
            android:gravity = "center"

            />


        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:id = "@+id/profileUsernameHeaderTextViewProfile"
            android:layout_width="190dp"
            app:layout_constraintTop_toBottomOf="@id/profileTextViewProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="40dp"
            android:gravity = "right"
            android:text = "Korisničko ime:  "
            android:textSize = "22sp"
            android:background = "@color/profile_color_bg"
            android:textStyle = "bold"
            />

        <TextView
            android:id = "@+id/profileUsernameValueTextViewProfile"
            android:layout_width="190dp"
            app:layout_constraintTop_toTopOf="@id/profileUsernameHeaderTextViewProfile"
            app:layout_constraintLeft_toRightOf="@id/profileUsernameHeaderTextViewProfile"
            android:layout_height="40dp"
            android:gravity = "left"
            android:background = "@color/profile_color_bg"
            android:textSize = "22sp"
            android:textStyle = "bold"
            />

        <TextView
            android:layout_marginLeft="15dp"
            android:id = "@+id/profileFirstNameHeaderTextViewProfile"
            android:layout_width="190dp"
            app:layout_constraintTop_toBottomOf="@id/profileUsernameHeaderTextViewProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="40dp"
            android:gravity = "right"
            android:text = "Ime:  "
            android:textSize = "22sp"
            android:background = "@color/profile_color_bg"
            android:textStyle = "bold"
            />

        <TextView
            android:id = "@+id/profileFirstNameValueTextViewProfile"
            android:layout_width="190dp"
            app:layout_constraintTop_toTopOf="@id/profileFirstNameHeaderTextViewProfile"
            app:layout_constraintLeft_toRightOf="@id/profileFirstNameHeaderTextViewProfile"
            android:layout_height="40dp"
            android:gravity = "left"
            android:background = "@color/profile_color_bg"
            android:textSize = "22sp"
            android:textStyle = "bold"
            />

        <TextView
            android:layout_marginLeft="15dp"
            android:id = "@+id/profileLastNameHeaderTextViewProfile"
            android:layout_width="190dp"
            app:layout_constraintTop_toBottomOf="@id/profileFirstNameHeaderTextViewProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="40dp"
            android:gravity = "right"
            android:text = "Prezime:  "
            android:textSize = "22sp"
            android:background = "@color/profile_color_bg"
            android:textStyle = "bold"
            />

        <TextView
            android:id = "@+id/profileLastNameValueTextViewProfile"
            android:layout_width="190dp"
            app:layout_constraintTop_toTopOf="@id/profileLastNameHeaderTextViewProfile"
            app:layout_constraintLeft_toRightOf="@id/profileLastNameHeaderTextViewProfile"
            android:layout_height="40dp"
            android:gravity = "left"
            android:background = "@color/profile_color_bg"
            android:textSize = "22sp"
            android:textStyle = "bold"
            />


        <TextView
            android:layout_marginLeft="15dp"
            android:id = "@+id/profilePhoneNumberHeaderTextViewProfile"
            android:layout_width="190dp"
            app:layout_constraintTop_toBottomOf="@id/profileLastNameHeaderTextViewProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="40dp"
            android:gravity = "right"
            android:text = "Telefon:  "
            android:textSize = "22sp"
            android:background = "@color/profile_color_bg"
            android:textStyle = "bold"
            />

        <TextView
            android:id = "@+id/profilePhoneNumberValueTextViewProfile"
            android:layout_width="190dp"
            app:layout_constraintTop_toTopOf="@id/profilePhoneNumberHeaderTextViewProfile"
            app:layout_constraintLeft_toRightOf="@id/profilePhoneNumberHeaderTextViewProfile"
            android:layout_height="40dp"
            android:gravity = "left"
            android:background = "@color/profile_color_bg"
            android:textSize = "22sp"
            android:textStyle = "bold"
            />

        <TextView
            android:layout_marginLeft="15dp"
            android:id = "@+id/profileAddressNumberHeaderTextViewProfile"
            android:layout_width="190dp"
            app:layout_constraintTop_toBottomOf="@id/profilePhoneNumberHeaderTextViewProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="40dp"
            android:gravity = "right"
            android:text = "Adresa:  "
            android:textSize = "22sp"
            android:background = "@color/profile_color_bg"
            android:textStyle = "bold"
            />

        <TextView
            android:id = "@+id/profileAddressValueTextViewProfile"
            android:layout_width="190dp"
            app:layout_constraintTop_toTopOf="@id/profileAddressNumberHeaderTextViewProfile"
            app:layout_constraintLeft_toRightOf="@id/profileAddressNumberHeaderTextViewProfile"
            android:layout_height="40dp"
            android:gravity = "left"
            android:background = "@color/profile_color_bg"
            android:textSize = "17sp"
            android:textStyle = "bold"
            />
        
        <Button
            android:id = "@+id/profileChangeButtonNotifications"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text = "Promena"

            app:layout_constraintTop_toBottomOf="@id/profileAddressNumberHeaderTextViewProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_marginTop="40dp"
            android:background = "@color/profile_button_bg"
            android:textSize = "16sp"
            />








    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

