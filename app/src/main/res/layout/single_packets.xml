<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_marginLeft="20dp"
        android:id = "@+id/singlePacketNameTextViewSinglePacketsRecycler"
        android:layout_width="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="40dp"
        android:gravity = "center"
        android:background = "@color/table_content"
        />

    <TextView
        android:id = "@+id/packetPricePerPersonTextViewSinglePacketsRecycler"
        android:layout_width="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/singlePacketNameTextViewSinglePacketsRecycler"
        android:layout_height="40dp"
        android:gravity = "center"
        android:background = "@color/table_content"
        />

    <LinearLayout
        android:id = "@+id/editTextHolderSinglePackets"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background = "@color/table_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/packetPricePerPersonTextViewSinglePacketsRecycler"
        >

        <EditText
            android:id = "@+id/numberOfPeopleEditTextSinglePacketsRecycler"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:inputType="phone"
            android:background = "@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginTop = "10dp"
            android:gravity = "center"

            />

    </LinearLayout>


    <TextView
        android:id = "@+id/totalPriceTextViewSinglePacketsRecycler"
        android:layout_width="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/editTextHolderSinglePackets"
        android:layout_height="40dp"
        android:gravity = "center"
        android:background = "@color/table_content"
        />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/totalPriceTextViewSinglePacketsRecycler"
        app:layout_constraintTop_toTopOf="@id/singlePacketNameTextViewSinglePacketsRecycler"
        android:background = "@color/table_content"
        android:gravity = "center_vertical"
        >

        <TextView

            android:id="@+id/buyPacketTextViewSinglePacketsRecycler"
            android:layout_width="40dp"
            android:layout_height="20dp"

            android:color="@color/button_color"
            android:text="Kupi"
            android:textSize="12sp"
            android:background = "@color/button_color"
            android:gravity = "center"


            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>