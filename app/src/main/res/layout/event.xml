<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background = "@color/white"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    >

    <TextView
        android:id = "@+id/eventNameTextViewEventRecycler"
        android:background = "@color/event_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity = "center"
        android:textSize = "18sp"
        android:textStyle = "bold"
        />

    <ImageView
        android:layout_marginTop="10dp"
        android:id = "@+id/eventImageViewEventRecycler"
        android:layout_width="90dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eventNameTextViewEventRecycler"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id = "@+id/eventDescriptionTextViewEventRecycler"
        android:layout_width="230dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@id/eventImageViewEventRecycler"
        app:layout_constraintTop_toTopOf="@id/eventImageViewEventRecycler"
        android:layout_marginLeft="10dp"
        android:background = "@color/event_description"
        android:textSize = "15sp"
        />

    <ImageView
        android:id = "@+id/eventLikeImageViewEventRecycler"
        android:layout_width="60dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eventImageViewEventRecycler"
        android:layout_marginLeft="10dp"
        />

    <TextView

        android:id = "@+id/eventNumberOfLikesTextViewEventRecycler"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/eventLikeImageViewEventRecycler"
        app:layout_constraintTop_toTopOf="@id/eventLikeImageViewEventRecycler"
        android:layout_marginLeft="10dp"
        android:textSize = "25sp"
        android:gravity = "center_vertical"
        android:textStyle = "bold"
        />





</androidx.constraintlayout.widget.ConstraintLayout>