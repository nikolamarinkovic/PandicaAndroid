<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_marginLeft="20dp"
        android:id = "@+id/packetNameTextViewPromoPacketRecycler"
        android:layout_width="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="40dp"
        android:gravity = "center"
        android:background = "@color/table_content"
        />

    <TextView
        android:id = "@+id/packetPriceTextViewPromoPacketRecycler"
        android:layout_width="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/packetNameTextViewPromoPacketRecycler"
        android:layout_height="40dp"
        android:gravity = "center"
        android:background = "@color/table_content"
        />

    <TextView
        android:id = "@+id/packetNumberOfPeopleTextViewPromoPacketRecycler"
        android:layout_width="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/packetPriceTextViewPromoPacketRecycler"
        android:layout_height="40dp"
        android:gravity = "center"
        android:background = "@color/table_content"
        />

    <TextView
        android:id = "@+id/packetDescriptionTextViewPromoPacketRecycler"
        android:layout_width="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/packetNumberOfPeopleTextViewPromoPacketRecycler"
        android:layout_height="40dp"
        android:gravity = "center"
        android:background = "@color/table_content"
        />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/packetDescriptionTextViewPromoPacketRecycler"
        app:layout_constraintTop_toTopOf="@id/packetNameTextViewPromoPacketRecycler"
        android:background = "@color/table_content"
        android:gravity = "center_vertical"
        >

        <TextView

            android:id="@+id/buyPacketTextViewPromoPacketRecycler"
            android:layout_width="40dp"
            android:layout_height="20dp"

            android:color="@color/button_color"
            android:text="Kupi"
            android:textSize="12sp"
            android:background = "@color/button_color"
            android:gravity = "center"


            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>